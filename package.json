{
  "name": "cbd-tools",
  "displayName": "cbd-tools",
  "description": "Toolkit for cbd-framework",
  "version": "2.0.1",
  "engines": {
    "vscode": "^1.42.0"
  },
  "icon": "assets/logo.png",
  "publisher": "kam",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NicoKam/vscode-cbd-tools"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:cbd-tools.create-template",
    "onCommand:cbd-tools.quick-jump-to-js",
    "onCommand:cbd-tools.quick-jump-to-css",
    "onCommand:cbd-tools.quick-jump-to-vue"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cbd-tools.create-template",
        "title": "使用 CBD 模板创建"
      },
      {
        "command": "cbd-tools.quick-jump-to-js",
        "title": "快速跳转至 TS / JS 文件"
      },
      {
        "command": "cbd-tools.quick-jump-to-css",
        "title": "快速跳转至 CSS / LESS 文件"
      },
      {
        "command": "cbd-tools.quick-jump-to-vue",
        "title": "快速跳转至 VUE 文件"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "cbd-tools.create-template",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "c": "changeset",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "vscode:package": "vsce package",
    "deploy": "vsce publish --no-dependencies  -p $VSCODE_MARKETPLACE_TOKEN",
    "pub": "ts-node scripts/publish.ts",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@orca-fe/eslint-config": "^2.2.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.18.36",
    "@types/semver": "^7.3.13",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.17.5",
    "eslint": "^8.33.0",
    "glob": "^7.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "mocha": "^7.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "mkdirp": "^3.0.1",
    "semver": "^7.3.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
